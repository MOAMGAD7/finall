<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.banking.ForgetPasswordController"
      alignment="CENTER" spacing="20" styleClass="root">
    <Label text="Forgot Password?" styleClass="title"/>
    <Label text="Enter your email to receive a verification code:" styleClass="label"/>
    <TextField fx:id="emailField" promptText="Email" styleClass="text-field"/>
    <Label fx:id="errorLabel" styleClass="label" style="-fx-text-fill: red;"/>
    <Button text="Send Verification Code" onAction="#handleSendCode" styleClass="button"/>
    <Button text="Back to Login" onAction="#switchToLogin" styleClass="button"/>
</VBox>