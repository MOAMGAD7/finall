<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<VBox alignment="CENTER" spacing="20" style="-fx-background-color: #f5f5f5;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.banking.LoginController">
    <Text text="Login" style="-fx-font-size: 24px; -fx-fill: #2c3e50;" />
    <TextField fx:id="usernameField" promptText="Username" style="-fx-font-size: 14px;" />
    <PasswordField fx:id="passwordField" promptText="Password" style="-fx-font-size: 14px;" />
    <Label fx:id="errorLabel" style="-fx-text-fill: #e74c3c; -fx-font-size: 12px;" />
    <Button fx:id="loginButton" text="Login" onAction="#handleLogin" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px;" />
    <Hyperlink fx:id="forgetPasswordLink" text="Forget Password?" onAction="#handleForgetPassword" style="-fx-font-size: 14px; -fx-text-fill: #4CAF50;" />
    <Button text="Sign Up" onAction="#switchToSignup" style="-fx-background-color: #7f8c8d; -fx-text-fill: white; -fx-font-size: 14px;" />
</VBox>